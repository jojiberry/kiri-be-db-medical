generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://josie:@localhost:5432/dbmedical"
}

model Doctor {
  id         Int       @id @unique @default(autoincrement())
  username   String    @unique
  password   String
  timelogged DateTime?
  Logger     Logger[]
  Visit      Visit[]
}

model Patient {
  id            Int     @id @unique @default(autoincrement())
  firstname     String
  lastname      String
  height        Int
  weight        Int
  age           Int
  sex           String
  visitRelation Visit[]
}

model Visit {
  id             Int      @id @unique @default(autoincrement())
  visitcode      Int
  visit_name     String
  date           DateTime
  threed_obj     String
  patientId      Int
  visitRelation  Patient  @relation(fields: patientId, references: [id])
  doctorId       Int
  doctorRelation Doctor   @relation(fields: doctorId, references: [id])
  Logger         Logger[]
}

model Logger {
  id              Int      @id @unique @default(autoincrement())
  doctorId        Int
  doctorRelation  Doctor   @relation(fields: [doctorId], references: [id])
  patientId       Int
  patientRelation Visit    @relation(fields: [patientId], references: [id])
  time            DateTime
}
